{
  "name": "react-lowdb",
  "version": "1.0.0",
  "description": "Save React state on LocalStorage using lowdb",
  "main": "./lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "test": "npm run lint && npm run cover",
    "test:prod": "cross-env BABEL_ENV=production npm run test",
    "test:only": "cross-env CI=true react-scripts test --coverage",
    "test:watch": "npm test -- --watch",
    "cover": "nyc --check-coverage npm run test:only",
    "lint": "eslint src/package",
    "build": "cross-env BABEL_ENV=production babel src/package --out-dir lib",
    "prepublish": "npm run clean && npm run lint && npm run test && npm run build",
    "start": "react-scripts start",
    "build-react": "react-scripts build",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "lowdb": "^1.0.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-json-view": "^1.19.1",
    "react-scripts": "^3.0.1"
  },
  "files": [
    "lib",
    "src/package"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/polats/react-lowdb.git"
  },
  "keywords": [
    "npm",
    "module",
    "node",
    "javascript",
    "react",
    "lowdb",
    "LocalStorage"
  ],
  "author": "Paul Gadi <paul@alto.io> (polats.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/polats/react-lowdb/issues"
  },
  "homepage": "https://github.com/polats/react-lowdb#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-minify": "^0.5.0",
    "chai": "^4.1.2",
    "cross-env": "^5.1.3",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.2",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "mocha": "^6.1.3",
    "nyc": "^13.3.0",
    "react-test-renderer": "^16.8.6",
    "rimraf": "^2.6.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
